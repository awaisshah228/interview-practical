---
import type { Block } from "../../lib/chapters";
import HeadingBlock from "./HeadingBlock.astro";
import ParagraphBlock from "./ParagraphBlock.astro";
import NoteBlock from "./NoteBlock.astro";
import TableBlock from "./TableBlock.astro";
import ExampleBlock from "./ExampleBlock.astro";
import ExerciseBlock from "./ExerciseBlock.astro";

interface Props { block: Block; }
const { block } = Astro.props;
---
{block.type === "h1" && <HeadingBlock text={block.text!} level={1} />}
{block.type === "h2" && <HeadingBlock text={block.text!} level={2} />}
{block.type === "p" && <ParagraphBlock text={block.text!} />}
{block.type === "note" && <NoteBlock text={block.text!} />}
{block.type === "table" && <TableBlock rows={block.rows!} />}
{block.type === "example" && <ExampleBlock title={block.title} code={block.code!} />}
{block.type === "exercise" && <ExerciseBlock question={block.question!} options={block.options!} answer={block.answer!} />}
